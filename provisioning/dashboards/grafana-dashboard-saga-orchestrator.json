{
  "title": "Saga Orchestrator - Monitoring",
  "tags": ["prometheus", "saga", "orchestrator", "microservices"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Sagas Total",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(saga_total) by (type)",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "Sagas Actives",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(saga_total{status=\"in_progress\"}) by (type)",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "type": "stat",
      "title": "Sagas Échouées",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(saga_failures_total) by (type)",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "red", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
    },
    {
      "type": "stat",
      "title": "Compensations",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(saga_compensations_total) by (type)",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Durée des Sagas",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(saga_duration_seconds_bucket[5m])) by (le, type))",
          "legendFormat": "P95 {{type}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(saga_duration_seconds_bucket[5m])) by (le, type))",
          "legendFormat": "P50 {{type}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "type": "timeseries",
      "title": "Taux de Succès des Sagas",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(saga_total{status=\"completed\"}[5m])) by (type) / sum(rate(saga_total[5m])) by (type) * 100",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 80},
              {"color": "green", "value": 95}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "type": "timeseries",
      "title": "Étapes des Sagas",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(saga_steps_total[5m])) by (type, status)",
          "legendFormat": "{{type}} - {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12}
    },
    {
      "type": "table",
      "title": "Top 10 Sagas les Plus Longues",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(10, saga_duration_seconds_sum / saga_duration_seconds_count)",
          "legendFormat": "{{type}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
    },
    {
      "type": "table",
      "title": "Taux d'Échec par Type de Saga",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(saga_failures_total) by (type) / sum(saga_total) by (type) * 100",
          "legendFormat": "{{type}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
    }
  ]
} 