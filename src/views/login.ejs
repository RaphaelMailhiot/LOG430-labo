<%- include('_partials/header') %>

<main class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900">

  <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-xl shadow-lg border border-base-300">
    <h1 class="text-4xl font-bold text-center mb-6 text-primary">Connexion</h1>
    <form action="/login" method="POST" class="space-y-4">
      <div>
        <label for="storeId" class="block mb-2 text-lg font-medium text-base-content">SÃ©lectionner un magasin</label>
        <select name="storeId" required class="select select-bordered w-full">
          <% stores.forEach(function(store) { %>
            <option value="<%= store.id %>">
              <%= store.name %>
            </option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
        Se connecter</button>
    </form>
  </div>

</main>

<%- include('_partials/footer') %>